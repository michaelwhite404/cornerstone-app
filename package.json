{
  "name": "cornerstone-employee-login",
  "version": "2.0.0",
  "description": "",
  "main": "app.js",
  "scripts": {
    "start": "node dist/server.js",
    "start:dev": "NODE_ENV=development nodemon dist/server.js",
    "start:prod": "NODE_ENV=production nodemon dist/server.js",
    "watch:js": "parcel watch ./public/js/index.js --out-dir ./public/js --public-url /js --out-file bundle.js",
    "build:js": "parcel build ./public/js/index.js --out-dir ./public/js --public-url /js --out-file bundle.js",
    "client": "cd client && npm start",
    "server": "nodemon dist/server.js",
    "dev": "concurrently -n 'server,client' -c 'green,blue' \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
  "author": "Michael White",
  "license": "MIT",
  "dependencies": {
    "@babel/polyfill": "^7.12.1",
    "@blueprintjs/core": "^3.47.0",
    "@graphql-tools/schema": "^8.2.0",
    "axios": "^0.21.1",
    "bcryptjs": "^2.4.3",
    "capitalize": "^2.0.3",
    "compression": "^1.7.4",
    "concurrently": "^6.2.1",
    "cookie-parser": "^1.4.5",
    "dotenv": "^8.6.0",
    "express": "^4.17.1",
    "express-graphql": "^0.12.0",
    "express-mongo-sanitize": "^2.1.0",
    "express-rate-limit": "^5.3.0",
    "google-auth-library": "^7.6.2",
    "googleapis": "^87.0.0",
    "graphql": "^15.5.3",
    "helmet": "^4.6.0",
    "html-to-text": "^5.1.1",
    "jsonwebtoken": "^8.5.1",
    "lodash.isplainobject": "^4.0.6",
    "moment": "^2.29.1",
    "mongoose": "^5.13.5",
    "morgan": "^1.10.0",
    "nodemailer": "^6.6.3",
    "nodemon": "^2.0.12",
    "passport": "^0.4.1",
    "passport-google-oauth20": "^2.0.0",
    "pluralize": "^8.0.0",
    "pug": "^3.0.2",
    "slugify": "^1.6.0",
    "validator": "^13.6.0",
    "xss-clean": "^0.1.1"
  },
  "engines": {
    "node": ">10.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
