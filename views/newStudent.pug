extends base

block content
  .w-form
    form#new-student(name="wf-form-New-Student" data-name="New Student")
      .content-top
      .bottom-content-grid
        #w-node-a43230b1ad1c-d1af671e.create-user-label
          | First Name: 
          span.required-asterisk *
        input#new-student-first-name.form-text-field.w-input(type="text" maxlength="256" name="firstName" data-name="firstName" required="")
        #w-node-010d328668ef-d1af671e.create-user-label
          | Last Name: 
          span.required-asterisk *
        input#new-student-last-name.form-text-field.w-input(type="text" maxlength="256" name="lastName" data-name="lastName" required="")
        #w-node-99422d9f5615-d1af671e.create-user-label
          | Status: 
          span.required-asterisk *
        select#new-student-status.form-select.w-select(name="status" required="" data-name="status")
          option(value="") Select one...
          option(value="Active") Current Student
          option(value="Inactive") Former Student
          option(value="Graduate") Graduate
        #w-node-3b9a95ed2ff9-d1af671e.create-user-label
          | Grade: 
          span.required-asterisk *
        select#new-student-grade.form-select.w-select(name="grade" data-name="grade")
          option(value="") Select one...
          option(value="0") Kindergarden
          option(value="1") 1st 
          option(value="2") 2nd
          option(value="3") 3rd
          option(value="4") 4th
          option(value="5") 5th
          option(value="6") 6th
          option(value="7") 7th
          option(value="8") 8th
          option(value="9") 9th
          option(value="10") 10th
          option(value="11") 11th
          option(value="12") 12th
        #w-node-0a98fe4b7772-d1af671e.create-user-label
          | Cornerstone Email: 
          span.required-asterisk *
        input#new-student-school-email.form-text-field.w-input(type="email" maxlength="256" name="schoolEmail" data-name="schoolEmail" placeholder="e.g. first.last@cornerstone-schools.org" required="")
        #w-node-4ce0cb768e17-d1af671e.create-user-label
          | Personal Email:
          span.required-asterisk
        input#new-student-personal-email.form-text-field.w-input(type="email" maxlength="256" name="personalEmail" data-name="personalEmail" placeholder="e.g. example@gmail.com")
        input#new-student-custom-id.form-text-field.w-input(type="text" maxlength="256" name="customID" data-name="customID" placeholder="12345")
        input#w-node-dbae2364cc1b-d1af671e.add-button.create.w-button(type="submit" value="Create New Student" data-wait="Please wait...")
        #w-node-64c518dc20de-d1af671e.create-user-label
          | Renweb ID:
          span.required-asterisk
