extends base

block content
  form#edit-device(name="wf-form-Edit-Device" data-name="Edit Device" data-device=`${device._id}`)
    .content-top
    .bottom-content-grid
      #w-node-c4b4e7e1a518-c92df52a.create-user-label
        | Name: 
        span.required-asterisk *
      #w-node-c4b4e7e1a51c-c92df52a.create-user-label
        | Brand: 
        span.required-asterisk *
      #w-node-c4b4e7e1a520-c92df52a.create-user-label
        | Model: 
        span.required-asterisk *
      #w-node-c4b4e7e1a524-c92df52a.create-user-label
        | Serial Number: 
        span.required-asterisk *
      input#edit-device-name.form-text-field.w-input(type="text" maxlength="256" name="name" data-name="name" placeholder="HP 01" required="" value=`${device.name}`)
      input#edit-device-brand.form-text-field.w-input(type="text" maxlength="256" name="brand" data-name="brand" placeholder="HP" required="" value=`${device.brand}`)
      input#edit-device-model.form-text-field.w-input(type="text" maxlength="256" name="model" data-name="model" placeholder="HP Chromebook 14 G5" required="" value=`${device.model}`)
      input#edit-device-sn.form-text-field.w-input(type="text" maxlength="256" name="serialNumber" data-name="serialNumber" placeholder="5CD8214GMZ" required="" value=`${device.serialNumber}`)
      #w-node-c4b4e7e1a52c-c92df52a.create-user-label
        | MAC Address: 
        span.required-asterisk *
      input#edit-device-mac.form-text-field.w-input(type="text" maxlength="256" name="macAddress" data-name="macAddress" placeholder="5C:5F:67:B0:DC:36" required="" value=`${device.macAddress}`)
      select#edit-device-status.form-select.w-node-c4b4e7e1a532-c92df52a.w-select(name="status" data-name="status")
        option(value="") Select one...
        option(value="Available") Available
        option(value="Broken") Broken
        option(value="Not Available") Not Available
      input#w-node-c4b4e7e1a531-c92df52a.add-button.create.w-button(type="submit" value="Save Changes" data-wait="Please wait...")
      #w-node-c4b4e7e1a533-c92df52a.create-user-label
        | Current Status: 
        span.required-asterisk *

block addEnd          
  script.
    $('select#edit-device-status [value="#{device.status}"]').attr('selected','');
    window.pageData = { 
      id: "#{device._id}", 
      deviceType: "#{key}"
    };
    $("script").last().remove()

