include infoStat

- const amount = (data.reimbursement.amount / 100).toLocaleString("en-US", { style: "currency", currency: "USD" });
- const date = new Intl.DateTimeFormat('en-US', { timeZone: 'America/New_York' }).format(data.reimbursement.date)
table(role='presentation', border='0', cellpadding='0', cellspacing='0')
  tbody
    tr
      td(align='left')
        table(role='presentation', border='0', cellpadding='0', cellspacing='0')
          tbody
            +infoStat("Payee Name", data.reimbursement.payee)
            +infoStat("Purpose", data.reimbursement.purpose)
            +infoStat("Purchase Date", date)
            +infoStat("Amount", amount)
            if data.reimbursement.specialInstructions
              +infoStat("Special Instructions", data.reimbursement.specialInstructions)
